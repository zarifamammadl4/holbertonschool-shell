#!/usr/bin/env bash
# Script that creates a PID file, loops forever, reacts to signals

PID_FILE="/var/run/myscript.pid"

# PID faylını yarat
echo $$ > "$PID_FILE"

# SIGTERM — mesaj göstər və çıx
trap 'echo "I hate the kill command"' SIGTERM

# SIGINT — ctrl+c zamanı
trap 'echo "Y U no love me?!"' SIGINT

# SIGQUIT və SIGTERM — faylı sil və çıx
trap 'rm -f "$PID_FILE"; exit' SIGQUIT
trap 'rm -f "$PID_FILE"; exit' SIGTERM

# Sonsuz loop
while true
do
    echo "To infinity and beyond"
    sleep 1
done
