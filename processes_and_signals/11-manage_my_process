#!/usr/bin/env bash
# Script to manage a dummy background process

PID_FILE="/var/run/my_process.pid"

start_process() {
    echo "manage_my_process started"
    sleep 1000 &
    echo $! > "$PID_FILE"
}

stop_process() {
    echo "manage_my_process stopped"
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")" 2>/dev/null
        rm -f "$PID_FILE"
    fi
}

restart_process() {
    echo "manage_my_process restarted"
    stop_process
    start_process
}

if [ $# -ne 1 ]; then
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
fi

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
